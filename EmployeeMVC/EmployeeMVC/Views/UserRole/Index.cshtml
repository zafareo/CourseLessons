@model List<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Index";
}

<h3 class="text-center"> UserRole Management</h3>
<hr />

<div class="container">
    @await Html.PartialAsync("_TopMenuPartial")

    <div class="row">
        <div class="col-12">
            @if (Model.Count == 0)
            {
                <p> No users found </p>
            }
            else
            {
                <table class="table">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th> Username </th>
                            <th> Actions </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in Model)
                        {
                            <tr>
                                <td> @m.UserName</td>
                                <td>
                                    <a class="btn btn-success"
                                      asp-route-userId="@m.Id"
                                     asp-action="Details"> View details </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
